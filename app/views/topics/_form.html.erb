<%= form_for @topic do |f| %>
<input type="hidden" id="topic_forum_id" name="topic[forum_id]" value="<%= params[:forum] %>" /> 
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p><%= f.submit %></p>
<% end %>
