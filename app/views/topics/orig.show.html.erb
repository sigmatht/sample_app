<% provide(:title, 'Topic') %>

<p>
  <strong>Name:</strong>
  <%= @topic.name %>
</p>
<p>
  <strong>Last Poster:</strong>
  <%= @topic.last_poster_id %>
</p>
<p>
  <strong>Last Post At:</strong>
  <%= @topic.last_post_at %>
</p>
<p>
  <strong>Forum:</strong>
  <%= @topic.forum_id %>
</p>
<p>
  <strong>User:</strong>
  <%= @topic.user_id %>
</p>
<p>
  <strong>Post</strong>
  <%= @topic.content %>
</p>

<p>
  <%= link_to "Edit", edit_topic_path(@topic) %> |
  <%= link_to "Destroy", @topic, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", topics_path %>
</p>
