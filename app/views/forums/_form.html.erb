<div class="row">
  <div class="span6" id="forumtext">
<%= form_for @forum do |f| %>
    <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, size:"15x5" %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => 1, :rows => 1 %>
  </p>
  <p><%= f.submit %></p>
  
<% end %>
</div>
</div>
